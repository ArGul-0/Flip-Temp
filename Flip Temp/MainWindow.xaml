<Window x:Class="Flip_Temp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Flip Temp" Height="300" Width="300" MinHeight="250" MinWidth="250"
        Background="#2d2d2d">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox x:Name="UserInputTextBox"
                   Width="75" Height="35"
                   Text = "{Binding TemperatureInput, Mode = TwoWay, UpdateSourceTrigger = PropertyChanged}"
                   VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" VerticalContentAlignment="Center"
                   Background ="#32393d" Foreground="#bdbdbd" BorderBrush="#373737	"/>

            <TextBlock x:Name="ResultTextBlock"
                   Width="75" Height="35"
                   Text="{Binding Result, Mode = OneWay}"
                   VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"
                   Margin="0,25,0,0"
                   Background="Transparent" Foreground="#bdbdbd"/>
        </StackPanel>

        <Button x:Name="ChangeButton" Grid.Row="0" Grid.Column="1"
                   Width="25" Height="25"
                   Content="↔"
                   VerticalAlignment="Bottom" HorizontalAlignment="Center" VerticalContentAlignment="Center"
                   Background="Transparent" Foreground="#bdbdbd" BorderBrush="Transparent"
                   FontSize="16"
                   Margin="0, 0, 0, 10"
                   Command="{Binding ChangeToggleTypeCommand}"/>

        <TextBlock x:Name="SelectionArrowTextBlock" Grid.Row="0" Grid.Column="1"
                   Width="50" Height="25"
                   Text="--->"
                   VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"
                   Background="Transparent" Foreground="#bdbdbd"
                   FontSize="24"/>



        <TextBlock Grid.Row="0" Grid.Column="0"
                   Width="50" Height="50"
                   Text="°C"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Background="Transparent" Foreground="#bdbdbd"
                   FontSize="42"/>
        <TextBlock Grid.Row="0" Grid.Column="2"
                   Width="50" Height="50"
                   Text="°F"
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Background="Transparent" Foreground="#bdbdbd"
                   FontSize="42"/>

    </Grid>
</Window>
